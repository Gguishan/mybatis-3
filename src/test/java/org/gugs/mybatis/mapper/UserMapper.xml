<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.gugs.mybatis.mapper.UserMapper">
    <resultMap id="user" type="org.gugs.mybatis.model.User"></resultMap>
    <select id="getUser" parameterType="org.gugs.mybatis.model.User"
            resultMap="user">
        select * from sys_consumer
    </select>

  <select id="getUserById" parameterType="org.gugs.mybatis.model.User"
          resultMap="user">
    select * from sys_consumer
    <where>
      <if test="id != null">
        and id = #{id}
      </if>
    </where>
  </select>

  <insert id="insertUser">
    insert into sys_consumer(id, username, real_name) values (#{id}, #{username}, #{real_name})
  </insert>
</mapper>
